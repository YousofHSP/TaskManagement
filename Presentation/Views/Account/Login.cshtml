@using DTO
@model LoginDto;
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="px-3">
    <div class="auth-logo-box">
        <a href="#" class="logo logo-admin"><img src="~/images/logo-sm.png" height="55" alt="logo"
                                                 class="auth-logo"></a>
    </div><!--end auth-logo-box-->

    <div class="text-center auth-logo-text">
        <h4 class="mt-0 mb-3 mt-5">ورود به سیستم</h4>
    </div> <!--end auth-logo-text-->


    <form class="form-horizontal auth-form my-4"  asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ReturnUrl "/>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <div class="input-group mb-3">
                <span style="border-radius: 50px" class="auth-form-icon">
                    <i class="dripicons-user"></i> 
                </span>
                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="نام کاربری را وارد کنید">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div><!--end form-group-->

        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="input-group mb-3"> 
                <span style="border-radius: 50px" class="auth-form-icon">
                    <i class="dripicons-lock"></i> 
                </span>
                <input type="password" class="form-control" asp-for="Password" placeholder="رمز را وارد کنید">
            </div>
        </div><!--end form-group-->
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-0 row">
            <div class="col-12 mt-2">
                <button style="direction: ltr" class="btn btn-primary btn-round btn-block waves-effect waves-light" type="submit">
                    ورود
                </button>
            </div><!--end col-->
        </div> <!--end form-group-->
    </form><!--end form-->
</div><!--end /div-->




