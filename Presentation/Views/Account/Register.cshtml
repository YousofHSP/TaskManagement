@using DTO
@model DTO.RegisterDto;
@{
    ViewData["Title"] = "ثبت نام";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container-fluid wrapper">
    <div class="row d-flex align-items-center h-100">
        <div class="col-sm-12 col-xl-3 d-flex justify-content-center align-items-center p-24">
            <div class="card auth-shadow login-card position-relative order-1">
                <img src="~/img/Rec01.png" alt="" class="position-absolute order-0 auth-rec1" />
                <img src="~/img/Rec01.png" alt="" class="position-absolute order-0 auth-rec2" />
                <img src="~/img/Rec01.png" alt="" class="position-absolute order-0 auth-rec1 bottom-0" />
                <div class="card-header bg-white border-0 p-0">
                    <div class="card-title text-center">
                        <h1>حسابتو بساز</h1>
                        <p>
                            با ما وارد دنیای خود شوید! اطلاعات حساب کاربری خود را وارد
                            کنید
                        </p>
                    </div>
                </div>
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="card-content">
                    <div class="form-group position-relative">
                        <div class="position-absolute input-icon d-flex align-items-center">
                            <i class="zmdi zmdi-account"></i>
                        </div>
                        <input asp-for="FullName" id="FullName  " class="form-control" placeholder="نام و نام خانوادگی" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group position-relative">
                        <div class="position-absolute input-icon d-flex align-items-center">
                            <i class="zmdi zmdi-lock"></i>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="کلمه عبور" />
                    </div>
                    
                    <div class="form-group position-relative d-flex position-relative">
                        <input asp-for="PhoneNumber" placeholder="09123456789" class="form-control input-number text-end" />
                        <div class="position-absolute left-0 select-number-icon-wrapper">
                            <div class="devider"></div>
                            <img src="~/img/Flag Pack.png" alt="" />
                            <img src="~/icons/select arrow.svg" alt="" />
                        </div>
                           
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button type="submit" class="custom-btn-primary w-100">
                        ساخت حساب
                    </button>
                    <p class="t-16 text-center mb-0">
                        حساب داری؟ <a asp-controller="Account" asp-action="Login">ورود به حساب</a>
                    </p>
                </div>
                </form>
            </div>
        </div>
        
    </div>
</div>


