
@{
    var model = ViewBag.Model;
    ViewData["Title"] = "لیست " + Model.Title;
}

<div class="card">
    <div class="card-body">
        @if (model.ViewSetting.Create)
        {
            <a asp-action="Create" class="btn btn-primary">ایجاد</a>
        }
        <table class="table table-hover mt-2">
            <thead>
            <tr>
                @foreach (var item in model.Columns)
                {
                    <td>@item.Name</td>
                }
                @if (model.ViewSetting.Delete || model.ViewSetting.Edit)
                {
                    <td></td>
                }
            </tr>
            @foreach (var row in model.Rows)
            {
                <tr>
                    @foreach (var col in model.Columns)
                    {
                        <td>@row.GetType().GetProperty(col.Value)?.GetValue(row)</td>
                    }
                    @if (model.ViewSetting.Edit || model.ViewSetting.Delete)
                    {
                    <td>
                        @if (model.ViewSetting.Edit)
                        {
                            <a asp-action="Edit" asp-route-id="@row.Id" class="btn btn-primary">ویرایش</a>
                        }
                        @if (model.ViewSetting.Delete)
                        {
                            <a asp-action="Delete" asp-route-id="@row.Id" class="btn btn-danger">حذف</a>
                        }
                    </td>
                    }
                </tr>
            }
            
            </thead>
        </table>
    </div>
    
</div>