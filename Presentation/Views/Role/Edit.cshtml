@using Entity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model DTO.RoleDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RoleDto</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @if (ViewBag.Errors is not null)
        {
            <div class="alert alert-danger">
                @foreach (var item in ViewBag.Errors)
                {
                    <strong>@item.Description</strong>
                }
            </div>
        }   
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    @foreach (var permission in Permissions.AllPermissions)
                    {
                        <div class="col-md-3">
                            <label>@permission.Value</label>
                            <input name="Permissions" @(Model.Permissions.Any(i => i == permission.Key) ? "checked" : "") value="@permission.Key" type="checkbox"/>
                        </div>
                    }
                </div>
            </div>
            <input asp-for="Id" type="hidden" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
