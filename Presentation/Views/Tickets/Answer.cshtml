@using Presentation.DTO
@model TicketDto

@{
    ViewData["Title"] = "پاسخ";
}

<h1>پاسخ به تیکت</h1>

<div>
    @foreach (var item in ViewBag.Tickets)
    {
        <hr />
        <dl class="row text-black">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @item.Title
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Text)
            </dt>
            <dd class="col-sm-10">
                @item.Text
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @item.Date
            </dd>
            <dt class="col-sm-2">
                کاربر
            </dt>
            <dd class="col-sm-10">
                @item.User.FullName (@item.User.UserName)
            </dd>
        </dl>
    }
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Answer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ParentId" value="@ViewBag.ParentId" type="hidden" />
            <input asp-for="Priority" value="@ViewBag.Priority" type="hidden" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">بازکشت به لیست</a>
</div>
